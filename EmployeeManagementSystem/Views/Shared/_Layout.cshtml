<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SoftNET.BD Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/materialize.css" rel="stylesheet" />
    <link href="~/Content/css/materialize.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/css/SiteCustom.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <nav class="nav-extended" id="navbar">

        <div class="nav-wrapper" >
            <a href="#!" class="brand-logo left" id="logo" style="padding-left:20px">SoftNET.BD</a>
            <ul class="right hide-on-med-and-down">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("ViewModel", "Index", "ViewModel", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("Ajax", "Index", "Ajax", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("Multi Input", "Index", "Default", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {

                        <li>@Html.ActionLink("Assign Role", "CreateRole", "Admin")</li>
                        <li>@Html.ActionLink("Mange Role", "Index", "Admin")</li>
                    }
                    <li>@Html.ActionLink("Hello, " + User.Identity.Name, "")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                }
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()

    </div>
    <hr />
    <footer class="page-footer" style="background-color:blueviolet">
        <div class="container">
            @*<p>&copy; @DateTime.Now.Year - DOTNETSoft.BD Application</p>*@
            © 2021 Copyright ~Md. Ariful Islam~
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    <script src="~/Content/js/materialize.js"></script>
    <script src="~/Content/js/materialize.min.js"></script>
</body>
</html>

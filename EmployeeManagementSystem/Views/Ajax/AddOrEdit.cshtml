@model EmployeeManagementSystem.Models.EmployeeAjax

@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;
}
<h3 class="highline">New Employee Add Or Edit by Ajax</h3>
@using (Html.BeginForm("AddOrEdit", "Ajax", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this);", data_restUrl = Url.Action("AddOrEdit", "Ajax", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <form class="col s12">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.EmployeeID)
            @Html.HiddenFor(model => model.ImagePath)
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.EmployeeName, new { @class = "control-label col-md-2" })
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(model => model.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeName)
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.EmployeeAddress, new { @class = "control-label col-md-2" })
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(model => model.EmployeeAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmployeeAddress)
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.Contact, new { @class = "control-label col-md-2" })
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Contact)
                </div>
            </div>
          
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.EmployeeDOB, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(model => model.EmployeeDOB, new { htmlAttributes = new { @class = "datepicker" } })
                    @*@Html.TextBoxFor(t => t.EmployeeDOB, new { @class = "datepicker" })*@
                    @Html.ValidationMessageFor(model => model.EmployeeDOB)
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.ImagePath, new { @class = "control-label col-md-2" })

                <img src="@Url.Content(Model.ImagePath)" style="margin:10px" height="200" width="200" id="imagePreview" />
                <input type="file" name="ImageUpload" accept="image/jpeg, image/png" onchange="ShowImagePreview(this,document.getElementById('imagePreview'))" />
            </div>
            <div class="row">
                <input type="submit" value="Submit" class="btn-small blue" />
                @if (Model.EmployeeID != 0)
                {
                    <a class="btn" onclick="refreshAddNewTab('@Url.Action("AddOrEdit","Ajax",new{id=0})',false)"><i class="fa fa-plus"></i>Refreash</a>
                }
            </div>
        </form>
    </div>
}
<script>
    $(document).ready(function () {
        $('.datepicker').datepicker();
    });

    function activatejQueryTable() {
        $("#EmployeeTable").DataTable();
    }

    $(function () {
        activatejQueryTable();
    });

</script>





